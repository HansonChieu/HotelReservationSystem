<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="700.0" prefWidth="900.0"
          xmlns="http://javafx.com/javafx/21"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.hanson.hotelreservationsystem.controller.Kiosk.KioskDateSelectionController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="274.5999755859375" minWidth="10.0" prefWidth="270.5999755859375" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="357.99998779296874" minWidth="10.0" prefWidth="352.40001220703124" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="293.60003662109375" minWidth="10.0" prefWidth="271.5999877929688" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="170.59998168945313" minHeight="0.0" prefHeight="87.19999504089355" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="350.8" minHeight="10.0" prefHeight="120.79998931884766" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="425.6" minHeight="10.0" prefHeight="208.59998779296876" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="363.3999999999999" minHeight="10.0" prefHeight="136.60001220703128" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="363.3999999999999" minHeight="10.0" prefHeight="99.39997558593745" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="363.3999999999999" minHeight="10.0" prefHeight="67.4000244140625" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <!-- Step Indicator -->
        <Label text="Step 2 of 5 : Date Selection" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="TOP">
            <font>
                <Font size="14.0" />
            </font>
            <GridPane.margin>
                <Insets top="30.0" />
            </GridPane.margin>
        </Label>

        <!-- Title Section -->
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
                <Label text="When would you like to stay?">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <Label text="Select your check-in and check-out dates">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>
            </children>
        </VBox>

        <!-- Date Pickers Section -->
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0" GridPane.columnSpan="2147483647" GridPane.rowIndex="2">
            <children>
                <VBox alignment="CENTER" prefHeight="142.0" prefWidth="180.0" spacing="5.0">
                    <children>
                        <Label text="Check-In Date" />
                        <DatePicker fx:id="checkInDatePicker" prefWidth="170.0" />
                        <Label fx:id="checkInErrorLabel" textFill="RED" visible="false" wrapText="true">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Nights Display -->
                <VBox alignment="CENTER" prefHeight="80.0" prefWidth="100.0">
                    <children>
                        <Label fx:id="nightsLabel" text="-- nights">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <VBox alignment="CENTER" prefHeight="142.0" prefWidth="180.0" spacing="5.0">
                    <children>
                        <Label text="Check-Out Date" />
                        <DatePicker fx:id="checkOutDatePicker" prefWidth="170.0" />
                        <Label fx:id="checkOutErrorLabel" textFill="RED" visible="false" wrapText="true">
                            <font>
                                <Font size="11.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Information Box -->
        <VBox alignment="TOP_CENTER" spacing="10" styleClass="info-box" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <children>
                <Label styleClass="info-header" text="Date Selection Info:" />
                <Text styleClass="info-text" text="• Check-in time: 4:00 PM&#10;• Check-out time: 12:00 PM&#10;• Minimum stay: 1 night&#10;• Weekend rates may apply (Friday-Sunday)" textAlignment="CENTER" wrappingWidth="338.39996337890625" />
                <!-- General Error Label -->
                <Label fx:id="errorLabel" textFill="RED" visible="false" wrapText="true">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </children>
        </VBox>

        <!-- Navigation Buttons -->
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <children>
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" prefHeight="40.0" prefWidth="70.0" text="Back">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="checkAvailabilityButton" mnemonicParsing="false" onAction="#handleCheckAvailability" prefHeight="40.0" text="Check Availability">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="10.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>

        <!-- Footer -->
        <Label text="ARC Hotel - Self Service Kiosk" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5" />

        <!-- Rules and Regulations Button -->
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.rowSpan="2147483647">
            <children>
                <Button mnemonicParsing="false" onAction="#handleRulesAndRegulations" text="Rules and Regulations" />
            </children>
        </VBox>
    </children>
</GridPane>
