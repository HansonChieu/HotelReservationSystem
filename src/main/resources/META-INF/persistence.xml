<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="HotelReservationPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.hanson.hotelreservationsystem.model.BaseEntity</class>
        <class>com.hanson.hotelreservationsystem.model.Room</class>
        <class>com.hanson.hotelreservationsystem.model.Guest</class>
        <class>com.hanson.hotelreservationsystem.model.Reservation</class>
        <class>com.hanson.hotelreservationsystem.model.ReservationRoom</class>
        <class>com.hanson.hotelreservationsystem.model.ReservationAddOn</class>
        <class>com.hanson.hotelreservationsystem.model.Payment</class>
        <class>com.hanson.hotelreservationsystem.model.Feedback</class>
        <class>com.hanson.hotelreservationsystem.model.LoyaltyAccount</class>
        <class>com.hanson.hotelreservationsystem.model.LoyaltyTransaction</class>
        <class>com.hanson.hotelreservationsystem.model.Admin</class>
        <class>com.hanson.hotelreservationsystem.model.WaitlistEntry</class>
        <class>com.hanson.hotelreservationsystem.model.ActivityLog</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hotel_db?createDatabaseIfNotExist=true&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="password"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
<!--            <property name="jakarta.persistence.schema-generation.scripts.action" value="create"/>-->
<!--            <property name="jakarta.persistence.schema-generation.scripts.create-target" value="hotel_database_script.sql"/>-->

            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <property name="hibernate.hikari.minimumIdle" value="2"/>
            <property name="hibernate.hikari.maximumPoolSize" value="10"/>
            <property name="hibernate.hikari.idleTimeout" value="30000"/>
        </properties>
    </persistence-unit>
</persistence>